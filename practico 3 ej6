#include <stdio.h>
#include <math.h>

int main() {
    double x;
    int n;
    printf("Ingrese X (real) y n (entero >=1): ");
    if (scanf("%lf %d", &x, &n) != 2) return 1;
    if (n < 1) { printf("n debe ser >= 1\n"); return 0; }

    double S = 0.0;

    if (fabs(x - 1.0) < 1e-15) {
        S = (double)n;
    } else {
        
        double term = x;
        for (int i = 1; i <= n; ++i) {
            S += term;
            term *= x;
        }
    }
    printf("S = %.10g\n", S);
    return 0;
}
