#include <stdio.h>
#include <math.h>

int esPrimo(long long n) {
    if (n <= 1) return 0;
    if (n <= 3) return 1;
    if (n % 2 == 0) return 0;
    long long r = (long long)sqrt((double)n);
    for (long long i = 3; i <= r; i += 2)
        if (n % i == 0) return 0;
    return 1;
}

int main() {
    long long N;
    printf("Ingrese N: ");
    if (scanf("%lld", &N) != 1) return 1;
    if (esPrimo(N)) printf("%lld es primo\n", N);
    else printf("%lld no es primo\n", N);
    return 0;
}
