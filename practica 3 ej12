#include <stdio.h>
#include <stdlib.h>

long long gcd_ll(long long a, long long b) {
    if (a < 0) a = -a; if (b < 0) b = -b;
    while (b) { long long r = a % b; a = b; b = r; }
    return a;
}

int main() {
    long long a, b;
    printf("Ingrese dos enteros: ");
    if (scanf("%lld %lld", &a, &b) != 2) return 1;
    if (a == 0 || b == 0) { printf("Si uno es 0, el MCM es 0\n"); return 0; }
    long long g = gcd_ll(a, b);
    long long l = llabs((a / g) * b); 
    printf("MCM(%lld, %lld) = %lld\n", a, b, l);
    return 0;
}
