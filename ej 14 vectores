#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> numeros;
    int cantidad, numero;


    cout << "Â¿Cuantos numeros deseas ingresar? ";
    cin >> cantidad;

    cout << "Ingresa " << cantidad << " numeros:" << endl;
    for(int i = 0; i < cantidad; i++) {
        cout << "Numero " << i + 1 << ": ";
        cin >> numero;
        numeros.push_back(numero);
    }

    cout << "Vector original: ";
    for(int num : numeros) {
        cout << num << " ";
    }
    cout << endl;


    for(int i = 0; i < numeros.size() - 1; i++) {
        for(int j = 0; j < numeros.size() - i - 1; j++) {
            if(numeros[j] > numeros[j+1]) {

                int temp = numeros[j];
                numeros[j] = numeros[j+1];
                numeros[j+1] = temp;
            }
        }
    }

    cout << "Vector ordenado: ";
    for(int num : numeros) {
        cout << num << " ";
    }
    cout << endl;

    return 0;
}
